<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title style="font-family:'Droid Arabic Kufi'">@ViewBag.Title - @UniversityBuildings.Resources.Resource.appName</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="@UniversityBuildings.Resources.Resource.description" name="description">
    <meta content="@UniversityBuildings.Resources.Resource.keywords" name="keywords">

    <link href="~/unylogo.png" rel="icon">
    <link href="~/Content/ComponentMaster/lib/ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Content/ComponentMaster/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Raleway:300,400,500,700,800|Montserrat:300,400,700" rel="stylesheet">
    <link href="http://fonts.googleapis.com/earlyaccess/droidarabickufi.css" rel="stylesheet" />
    @Styles.Render("~/bundles/menu")
    @Styles.Render("~/bundles/uimin")
    @Styles.Render("~/bundles/styles")
</head>

<body id="body">
        <!--==========================
          Top Bar
        ============================-->
        <section id="topbar" class="d-none d-lg-block">
            <div class="container clearfix">
                <div class="contact-info float-left">
                    <i class="fa fa-envelope-o"></i> <a>president@mu.edu.eg</a>
                </div>
                <div class="social-links float-right">
                    <a target="_blank" href="https://twitter.com/MiniaUniversit" class="twitter"><i class="fa fa-twitter"></i></a>
                    <a target="_blank" href="https://www.facebook.com/NewsMiniaUniversity" class="facebook"><i class="fa fa-facebook"></i></a>
                    <a target="_blank" href="https://www.youtube.com/channel/UCygOsueMxEEPUZSm4Ut4AXg/" class="instagram"><i class="fa fa-youtube"></i></a>
                </div>
            </div>
        </section>

        <!--==========================
          Header
        ============================-->
        <header id="header">
            <div class="container">
                @{
                    var currentlag = ViewBag.currentLanguage;
                    if (currentlag == "en")
                    {
                        <div id="logo" class="pull-left">
                            <h1 id="font"><i id="theI" style="font-size:xx-large;color:#50D8AF" class="fa fa-building"></i> <a style="font-family:'Droid Arabic Kufi',sans-serif" href="~/" class="scrollto">@UniversityBuildings.Resources.Resource.appName</a></h1>
                        </div>
                        <nav id="nav-menu-container">
                            <ul class="nav-menu">
                                @*<li><a href="~/" title="Home Page"><i style="font-size:x-large" class="fa fa-home"></i></a></li>*@
                                <li class="menu-has-children">
                                    <a style="font-size:medium;font-family:'Droid Arabic Kufi',sans-serif;cursor:pointer">@UniversityBuildings.Resources.Resource.searchFor</a>
                                    <ul>
                                        <li><a style="text-align:center; font-size:medium; font-family:'Droid Arabic Kufi',sans-serif" href="~/use/search">@UniversityBuildings.Resources.Resource.FacultyBuildings</a></li>
                                        <li><a style="text-align:center; font-size:medium; font-family:'Droid Arabic Kufi',sans-serif" href="~/use/hospitalSearch">@UniversityBuildings.Resources.Resource.hospitals</a></li>
                                        <li><a style="text-align:center; font-size:medium; font-family:'Droid Arabic Kufi',sans-serif" href="~/use/OtherBuildingSearch">@UniversityBuildings.Resources.Resource.otherBuildings</a></li>
                                    </ul>
                                </li>
                                <li class="Mhide"><a style="font-size:medium;font-family:'Droid Arabic Kufi',sans-serif" href="#trends">Most Visited</a></li>
                                <li><a style="font-size:medium;font-family:'Droid Arabic Kufi',sans-serif" href="#contact">@UniversityBuildings.Resources.Resource.contact</a></li>
                                @{
                                    foreach (var i in UniversityBuildings.Mine.SiteLanguages.AvailableLanguages)
                                    {
                                        <li style="font-family:'Droid Arabic Kufi',sans-serif">@Html.ActionLink(i.langFullName, "ChangeLanguage", "use", new { lang = i.langCultureName, url = HttpContext.Current.Request.RawUrl }, new { style = "font-family:'Droid Arabic Kufi',sans-serif;font-size:medium" })</li>
                                    }
                                }
                            </ul>
                        </nav><!-- #nav-menu-container -->
               }
               else
               {
                   <div id="logo" class="pull-right">
                       <h1><a style="font-family:'Droid Arabic Kufi',sans-serif" href="~/" class="scrollto">@UniversityBuildings.Resources.Resource.appName </a> <i id="theI" style="font-size:xx-large;color:#50D8AF" class="fa fa-building"></i> </h1>
                       
                   </div>
                   <nav id="nav-menu-container" class="pull-left" style="float:left;direction:ltr">
                       <ul class="nav-menu">
                           @{
                               foreach (var i in UniversityBuildings.Mine.SiteLanguages.AvailableLanguages)
                               {
                                   <li style="font-family:'Droid Arabic Kufi',sans-serif">@Html.ActionLink(i.langFullName, "ChangeLanguage", "use", new { lang = i.langCultureName,url = HttpContext.Current.Request.RawUrl }, new { style = "font-family:'Droid Arabic Kufi',sans-serif;font-size:medium" })</li>
                               }
                           }
                           <li><a style="font-size:medium;font-family:'Droid Arabic Kufi',sans-serif" href="#contact">@UniversityBuildings.Resources.Resource.contact</a></li>
                           <li class="Mhide"><a style="font-size:medium;font-family:'Droid Arabic Kufi',sans-serif" href="#trends">الأكثر رواجاً</a></li>
                           <li class="menu-has-children">
                               <a style="font-size:medium;font-family:'Droid Arabic Kufi',sans-serif;cursor:pointer">@UniversityBuildings.Resources.Resource.searchFor</a>
                               <ul>
                                   <li><a style="text-align:center; font-size:medium; font-family:'Droid Arabic Kufi',sans-serif" href="~/use/search">@UniversityBuildings.Resources.Resource.FacultyBuildings</a></li>
                                   <li><a style="text-align:center; font-size:medium; font-family:'Droid Arabic Kufi',sans-serif" href="~/use/hospitalSearch">@UniversityBuildings.Resources.Resource.hospitals</a></li>
                                   <li><a style="text-align:center; font-size:medium; font-family:'Droid Arabic Kufi',sans-serif" href="~/use/OtherBuildingSearch">@UniversityBuildings.Resources.Resource.otherBuildings</a></li>
                               </ul>
                           </li>
                           <li><a href="~/" title="الصفحة الرئيسية"><i style="font-size:x-large" class="fa fa-home"></i></a></li>
                        </ul>
                    </nav><!-- #nav-menu-container -->
                    }
                }
            </div>
        </header><!-- #header -->
    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div>

