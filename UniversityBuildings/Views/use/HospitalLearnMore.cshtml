@model UniversityBuildings.ViewModel.HosImagesViewModel

@{
    Layout = "~/Views/Shared/_Master.cshtml";
    ViewBag.Title = UniversityBuildings.Resources.Resource.HospitalLearnMore;
    var currentlg = ViewBag.currentLanguage;
    var IMG = ViewBag.mainImage;
}


<div>
    @{
        if (currentlg == "en")
        {
            <section id="services">
                <div class="container">
                    <div class="section-header">
                        <h2>@Html.DisplayFor(model => model.hospital_buildings.Hospital_NameEN)</h2>
                        @if (IMG != null)
                        {
                            <div class="row">
                                <div class="col-md-12">
                                    <img style="height:400px;width:100%" src="@Url.Content(IMG)" alt="Learn More For Faculties" />
                                </div>
                            </div>
                        }
                        <br />
                        <p>
                            <strong>Hello</strong> and Welcome to @Html.DisplayFor(model => model.hospital_buildings.Hospital_NameEN), It`s one of the
                            most excellent Building in Minia University. The Manager of The @Html.DisplayFor(model => model.hospital_buildings.Hospital_NameEN) is @Html.DisplayFor(model => model.hospital_buildings.Hospital_Manager_NameEN) .
                            It was built in @Html.DisplayFor(model => model.hospital_buildings.Hospital_Genesis) .
                        </p>
                        <hr />
                        <h1>Lets go to the Details of our Hospital:-</h1>
                        <p>@Html.DisplayFor(model => model.hospital_buildings.Hospital_SectionsEN) And it enjoys with a special Location.</p>
                        <hr />
                        <h1>Some Calculations for The Hospital:-</h1>
                        <p>
                            @Html.DisplayFor(model => model.hospital_buildings.Hospital_NameEN) contains @Html.DisplayFor(model => model.hospital_buildings.Hospital_Floors) floors.
                        </p>
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="tneen-content tneen-display-container">
                                    <!-- buttons -->
                                    <a style="color:white" class="tneen-btn-floating noselection  tneen-display-left tneen-hover-dark-grey" onclick="plusDivs(-1)">&#10094;</a>
                                    <a style="color:white" class="tneen-btn-floating noselection  tneen-display-right tneen-hover-dark-grey " onclick="plusDivs(+1)">&#10095;</a>
                                    @foreach (var item in Model.images)
                                    {
                                        <div class="tneen-display-container mySlides tneen-animate-fading" style="display: block;">
                                            <img class="tneen-animate-fading imgSlider" src="@Url.Content(item.Image_Path)">
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <br />
                    </div>
                    <p>
                        @Html.ActionLink("Go Back", "Index")
                    </p>
                </div>
            </section>
        }
        else
        {
            <section id="services">
                <div class="container">
                    <div dir="rtl" class="section-header">
                        <h2 style="text-align:right; font-family:'Droid Arabic Kufi'">@Html.DisplayFor(model => model.hospital_buildings.Hospital_Name)</h2>
                        @if (IMG != null)
                        {
                            <div class="row">
                                <div class="col-md-12">
                                    <img style="height:400px;width:100%" src="@Url.Content(IMG)" alt="Learn More For Faculties" />
                                </div>
                            </div>
                        }
                        <br />
                        <p dir="rtl" style="font-family:'Droid Arabic Kufi';text-align:center">أهلا وسهلا بكم في @Html.DisplayFor(model => model.hospital_buildings.Hospital_Name). تعد المستشفى واحدة من المستشفيات المتميزة داخل جامعة المنيا.</p>
                        <p dir="rtl" style="font-family:'Droid Arabic Kufi';text-align:center">مدير المستشفى هو <strong style="font-family:'Droid Arabic Kufi'">@Html.DisplayFor(model => model.hospital_buildings.Hospital_Manager_Name)</strong> وهو المدير الحالي للمستشفى .</p>
                        <p dir="rtl" style="font-family:'Droid Arabic Kufi';text-align:center">لقد تم انشاء المستشفى في @Html.DisplayFor(model => model.hospital_buildings.Hospital_Genesis).</p>
                    </div>
                    <h1 dir="rtl" style="font-family:'Droid Arabic Kufi';text-align:right">هيا بنا لمعرفة بعض التفاصيل المتعلقة بالمستشفى:-</h1>
                    <p dir="rtl" style="font-family:'Droid Arabic Kufi';text-align:center">@Html.DisplayFor(model => model.hospital_buildings.Hospital_Sections) وتتمتع المستشفى بمكان مميز للغاية.</p>
                    <hr />
                    <h1 dir="rtl" style="font-family:'Droid Arabic Kufi';text-align:right">بعض الاحصاءات المتعلقة بالمستشفى:-</h1>
                    <p dir="rtl" style="font-family:'Droid Arabic Kufi';text-align:center">
                        @Html.DisplayFor(model => model.hospital_buildings.Hospital_Name) تحتوي على @Html.DisplayFor(model => model.hospital_buildings.Hospital_Floors) أدوار .
                    </p>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="tneen-content tneen-display-container">
                                <!-- buttons -->
                                <a style="color:white" class="tneen-btn-floating noselection  tneen-display-left tneen-hover-dark-grey" onclick="plusDivs(-1)">&#10094;</a>
                                <a style="color:white" class="tneen-btn-floating noselection  tneen-display-right tneen-hover-dark-grey " onclick="plusDivs(+1)">&#10095;</a>
                                @foreach (var item in Model.images)
                                {
                                    <div class="tneen-display-container mySlides tneen-animate-fading" style="display: block;">
                                        <img class="tneen-animate-fading imgSlider" src="@Url.Content(item.Image_Path)">
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <hr />
                    <p style="font-family:'Droid Arabic Kufi';text-align:right">
                        @Html.ActionLink("الرجوع", "Index",null, new { style = "font-family:'Droid Arabic Kufi'" })
                    </p>
                </div>
            </section>
        }
    }
</div>
