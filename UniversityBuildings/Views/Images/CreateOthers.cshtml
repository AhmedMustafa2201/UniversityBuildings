@model UniversityBuildings.Models.Images

@{
    ViewBag.Title = "انشاء صورة لمبنى آخر";
}

@using (Html.BeginForm("CreateOthers", "Images", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="col-md-4"></div>
    <div class="form-horizontal col-md-4">
        <br /><br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h3 style="text-align:right;font-family:'Droid Arabic Kufi'">مسار الصورة</h3>
                <input type="file" accept="image/*" id="profimg2" name="profimg2" />
                @Html.ValidationMessageFor(model => model.Image_Path, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            <h3 style="text-align:right;font-family:'Droid Arabic Kufi'">الأخرى</h3>
                @Html.DropDownList("Other_ID", null, "اسم المبنى الآخر", htmlAttributes: new { @class = "form-control", dir = "rtl", style = "height:40px", required = "required" })
                @Html.ValidationMessageFor(model => model.Other_ID, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="انشاء" class="btn btn-success" />

        </div>
    </div>

        <div>
            @Html.ActionLink("Go Back", "Index1")
        </div>

 </div>
<div class="col-md-4"></div>
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

}