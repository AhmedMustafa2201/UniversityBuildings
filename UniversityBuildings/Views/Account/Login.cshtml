@using UniversityBuildings.Models
@model LoginViewModel
@{
    ViewBag.Title = "تسجيل الدخول";
}

<div class="row">
    <div class="col-md-3 col-sm-12"></div>
    <div style="text-align:right" class="col-md-5 col-sm-12">
        <h1 style="text-align:center;font-family:'Droid Arabic Kufi'">من أنت؟</h1>
        <section style="text-align:center" id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 style="font-family:'Droid Arabic Kufi'">استخدم حسابك في الدخول الى منطقة التعديل</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <h2 style="text-align:right;font-family:'Droid Arabic Kufi'">اسم المستخدم</h2>
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control",placeholder = "Enter your Username in 'Email' format" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <h2 style="text-align:right;font-family:'Droid Arabic Kufi'">كلمة المرور</h2>
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control",placeholder = "Enter your Password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-4">
                                <input type="submit" value="تسجيل الدخول" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}